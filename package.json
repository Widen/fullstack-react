{
  "name": "fullstack-react",
  "version": "2.0.0",
  "description": "",
  "main": "./site/bundle.js",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.15.0",
    "express": "4.13.4",
    "falcor": "0.1.16",
    "falcor-express": "0.1.2",
    "falcor-http-datasource": "0.1.3",
    "falcor-router": "0.2.12",
    "react": "0.14.7",
    "react-dom": "0.14.7"
  },
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-core": "6.5.1",
    "babel-loader": "6.2.2",
    "babel-plugin-rewire": "1.0.0-beta-5",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-react": "6.5.0",
    "jasmine": "2.4.1",
    "jasmine-core": "2.4.1",
    "karma": "0.13.19",
    "karma-jasmine": "0.3.7",
    "karma-phantomjs-launcher": "1.0.0",
    "karma-spec-reporter": "0.0.24",
    "karma-webpack": "1.7.0",
    "npm-run-all": "^2.1.1",
    "phantomjs-prebuilt": "2.1.4",
    "rewire": "2.5.1",
    "webdriverio": "4.0.3",
    "webpack": "1.12.13"
  },
  "scripts": {
    "start": "npm i && npm-run-all webpack node-server",
    "node-server": "node server",
    "node-server-bg": "npm run node-server &",
    "webdriver:prestart": "npm-run-all webpack node-server-bg",
    "webdriver:mkdir": "mkdir -p server/test/bin",
    "webdriver:wget": "(ls ./server/test/bin/selenium.jar) || wget -O ./server/test/bin/selenium.jar http://selenium-release.storage.googleapis.com/2.51/selenium-server-standalone-2.51.0.jar",
    "webdriver:stopIfRunning": "(curl -XGET 'http://localhost:4444/selenium-server/driver/?cmd=shutDownSeleniumServer') | true",
    "webdriver:run": "java -jar server/test/bin/selenium.jar &",
    "start-webdriver": "npm-run-all webdriver:*",
    "pretest": "npm-run-all --parallel start-webdriver",
    "test-client": "karma start config/karma.conf.js",
    "test-integration": "node server/test/integration",
    "test-server": "jasmine JASMINE_CONFIG_PATH=config/jasmine.json",
    "test": "npm-run-all test-client test-server",
    "posttest": "npm-run-all shutdown:*",
    "shutdown:node": "(sleep 1 && pkill node; pkill node) | true",
    "shutdown:java": "npm run webdriver:stopIfRunning",
    "webpack": "webpack --config config/webpack.config.js"
  }
}
